{
  "name": "@carnesen/tsconfig",
  "version": "2.0.0",
  "description": "TypeScript configuration for @carnesen projects",
  "type": "commonjs",
  "exports": {
    "./node24": "./node24/tsconfig.json"
  },
  "files": [
    "node24",
    "overrides"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build:tsc": "rm -rf dist-tsc && tsc",
    "build:esbuild": "rm -rf dist-esbuild && esbuild src/example.ts src/example.test.ts --outdir=dist-esbuild --format=cjs --platform=node",
    "test:tsx": "node --import tsx --test src/example.test.ts",
    "test:tsc": "npm run build:tsc && node --test dist-tsc/example.test.js",
    "test:esbuild": "npm run build:esbuild && node --test dist-esbuild/example.test.js",
    "test:pack": "node --import tsx --test src/integration.test.ts",
    "test": "npm run test:tsc",
    "test:all": "npm run test:tsx && npm run test:tsc && npm run test:esbuild",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@carnesen/dev": "0.4.0",
    "@tsconfig/node24": "24.0.3",
    "@types/node": "^24.0.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.0",
    "typescript": "5.9.3"
  },
  "repository": "github:carnesen/tsconfig",
  "author": "Chris Arnesen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carnesen/tsconfig/issues"
  },
  "homepage": "https://github.com/carnesen/tsconfig#readme"
}
